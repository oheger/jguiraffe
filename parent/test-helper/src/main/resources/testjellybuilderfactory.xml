<config>
    <!-- A complete declaration of a builderFactory -->
    <builderFactory config-class="net.sf.jguiraffe.gui.builder.impl.JellyBuilderFactory">
        <componentManager config-class="net.sf.jguiraffe.gui.builder.components.ComponentManagerImpl"/>
        <actionManager config-class="net.sf.jguiraffe.gui.builder.action.ActionManagerImpl"/>
        <windowManager config-class="net.sf.jguiraffe.gui.builder.window.WindowManagerImpl"/>
        <fieldHandlerFactory config-class="net.sf.jguiraffe.gui.builder.components.DefaultFieldHandlerFactory"/>
    </builderFactory>

    <!-- A declaration of a builderFactory with a missing field handler factory -->
    <builderFactoryNoFieldFactory config-class="net.sf.jguiraffe.gui.builder.impl.JellyBuilderFactory">
        <componentManager config-class="net.sf.jguiraffe.gui.builder.components.ComponentManagerImpl"/>
        <actionManager config-class="net.sf.jguiraffe.gui.builder.action.ActionManagerImpl"/>
        <windowManager config-class="net.sf.jguiraffe.gui.builder.window.WindowManagerImpl"/>
    </builderFactoryNoFieldFactory>

    <!-- A declaration of a builderFactory with a missing component manager -->
    <builderFactoryNoCompMan config-class="net.sf.jguiraffe.gui.builder.impl.JellyBuilderFactory">
        <actionManager config-class="net.sf.jguiraffe.gui.builder.action.ActionManagerImpl"/>
        <windowManager config-class="net.sf.jguiraffe.gui.builder.window.WindowManagerImpl"/>
    </builderFactoryNoCompMan>

    <!-- A declaration of a builderFactory with a missing action manager -->
    <builderFactoryNoActionMan config-class="net.sf.jguiraffe.gui.builder.impl.JellyBuilderFactory">
        <componentManager config-class="net.sf.jguiraffe.gui.builder.components.ComponentManagerImpl"/>
        <windowManager config-class="net.sf.jguiraffe.gui.builder.window.WindowManagerImpl"/>
    </builderFactoryNoActionMan>

    <!-- A declaration of a builderFactory with a missing window manager -->
    <builderFactoryNoWndMan config-class="net.sf.jguiraffe.gui.builder.impl.JellyBuilderFactory">
        <componentManager config-class="net.sf.jguiraffe.gui.builder.components.ComponentManagerImpl"/>
        <actionManager config-class="net.sf.jguiraffe.gui.builder.action.ActionManagerImpl"/>
    </builderFactoryNoWndMan>
</config>