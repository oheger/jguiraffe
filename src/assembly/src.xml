<assembly>
  <id>src</id>
  <formats>
    <format>tar.gz</format>
    <format>zip</format>
  </formats>
  <baseDirectory>jguiraffe-${project.version}-src</baseDirectory>
  <fileSets>
    <fileSet>
      <includes>
        <include>LICENSE.txt</include>
        <include>NOTICE.txt</include>
        <include>pom.xml</include>
        <include>RELEASE-NOTES.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>conf</directory>
    </fileSet>
    <fileSet>
      <directory>core</directory>
      <includes>
        <include>src/**</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>examples</directory>
      <includes>
        <include>src/**</include>
        <include>pom.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>

